<% if current_user.present? && current_user.id == @car.user_id %>
<div class="container mt-3">
    <div class="flex-row text-center car-info" style="background-color: white; width: 49%">
      <ul id="lists">
        <li class="list"> <strong>Make:</strong> <%= @car.make %></em></li>
        <li class="list"> <strong> Model: </strong> <%= @car.model %></li>
        <li class="list"><strong>Price:</strong> <%= @car.price %></li>
        <li class="list"><strong>Location</strong> <%= @car.location %></li>
      </ul>
    </div>
    <div class="row">

      <div class="col">
        <%=image_tag(@car.photo_url, class: "img-fluid") %>
      </div>
    </div>
   <%= link_to "Update",
    edit_car_path(@car), :class => "btn button mt-3"
  %>
     <%= link_to "Delete",
    car_path(@car),
    data: {turbo_method: :delete, turbo_confirm: "Are you sure?"}, :class => "btn button mt-3"
  %>
  </div>
<% else%>
  <div class="container mt-3">
    <div class="flex-row text-center car-info" style="background-color: white; width: 49%">
      <ul id="lists">
        <li class="list"> <strong>Make: </strong> <%= @car.make %></em></li>
        <li class="list"> <strong> Model: </strong> <%= @car.model %></li>
        <li class="list"><strong>Price: </strong> <%= @car.price %></li>
        <li class="list"><strong>Location: </strong> <%= @car.location %></li>
      </ul>
    </div>
    <div class="row">
      <div class="col">
        <%=image_tag(@car.photo_url, class: "img-fluid") %>
      </div>



        <br>
        <div class="col">
          <h3>Book our <%= @car.make %></h3>
          <br>
          <%= simple_form_for [@car, @booking] do |f| %>
            <%= f.input :comment %>
            <%= f.input :start_date, as: :date, html5: true %>
            <%= f.input :end_date, as: :date, html5: true %>
            <%= f.button :submit, class: "btn button" %>
          <% end %>
        </div>
      </div>
    </div>
   </div>
<% end %>
  <br>
  </div>
</div>
